# imports
import sqlite3


# global variables
minUsr = 1
maxUsr = 20
minPasswd = 8
maxPasswd = 12


# function to print the given title of a page
def pageTitle(title):
  print("----------")
  print(title)
  print("----------")


# function to print a system message
def printMessage(message):
  print("* " + message + " *")


def construction():
  print("Under Construction.")


# function for log in page
def login():
  pageTitle("Log In")
  usr = input("Username: ")
  passwd = input("Password: ")
  loginAuthorization(usr, passwd)
  printMessage("You have successfully logged in")
  loggedin()


# function for authorizing login info
def loginAuthorization(usr, passwd):
  badUsr = len(usr) < minUsr or len(usr) > maxUsr
  badPasswd = len(passwd) < minPasswd or len(passwd) > maxPasswd
  if badUsr or badPasswd:
    printMessage("Incorrect username/password, please try again")
    end = input("Press Q to quit. Otherwise, press any key.\nInput: ")
    if end == 'q' or end == 'Q':
      inCollege()
    login()


# function for screen after logging in
def loggedin():
  pageTitle("Home")
  option = input("Press J for Job Search or\n"
                 "Press F to Find Someone or\n"
                 "Press S to Learn a New Skill or\n"
                 "Press O to log out.\n"
                 "Input: ")
  if option == 'J' or option == 'j':
    construction()
  elif option == 'F' or option == 'f':
    construction()
  elif option == 'S' or option == 's':
    learnSkill()
  elif option == 'O' or option == 'o':
    inCollege()


# function for creating an account
def createAcct():
  pageTitle("Create An Account")
  

# function to learn a skill
def learnSkill():
  pageTitle("Learn a New Skill")
  option = input("Press 1 to learn Skill1 or\n"
                 "Press 2 to learn Skill2 or\n"
                 "Press 3 to learn Skill3 or\n"
                 "Press 4 to learn Skill4 or\n"
                 "Press 5 to learn Skill5 or\n"
                 "Press H to go Home.\n"
                 "Input: ")
  if option == '1':
    construction()
  elif option == '2':
    construction()
  elif option == '3':
    construction()
  elif option == '4':
    construction()
  elif option == '5':
    construction()
  elif option == 'H' or option == 'h':
    loggedin()


# function for initial InCollege screen
def inCollege():
  pageTitle("Welcome to InCollege!")
  option = input("Press L to log in or\n"
                 "Press C to create an account or\n"
                 "Press E to exit InCollege.\n"
                 "Input: ")
  if option == 'L' or option == 'l':
    login()
  elif option == 'C' or option == 'c':
    createAcct()
  elif option == 'E' or option == 'e':
    printMessage("Exited InCollege.")
    exit(0)


# call/open InCollege
inCollege()
